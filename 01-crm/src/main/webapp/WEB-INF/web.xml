<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>com.bjpowernode.crm.settings.qx.user.web.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutController</servlet-name>
        <servlet-class>com.bjpowernode.crm.settings.qx.user.web.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutController</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>activityController</servlet-name>
        <servlet-class>com.bjpowernode.crm.workbench.activity.controller.ActivityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>activityController</servlet-name>
        <url-pattern>/workbench/activity/getActivityBypage.do</url-pattern>
    </servlet-mapping>

    <!--默认欢迎页-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>